{
  "compilerOptions": {
    "target": "esNext",
    "typeRoots": ["./node_modules/@types", "src/@types"],
    "types": ["jest", "node"],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "incremental": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "allowJs": true,
    "noEmit": false,

    "baseUrl": ".",
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@common/*": ["src/common/*"],

    }
  },
  "include": ["src", "test"]
}
